@startuml
!theme plain
hide circle
skinparam linetype ortho

class PaymentTransaction {
    Long id
    Long orderId
    String transactionId
    BigDecimal amount
    String paymentMethod
    PaymentTransactionStatus status
    LocalDateTime createdAt
    LocalDateTime updatedAt
}

enum PaymentTransactionStatus {
    PENDING
    SUCCESS
    FAILED
    REFUNDED
}
@enduml